{{#hiddensection}}
    {{{ hiddensection }}}
{{/hiddensection}}
{{^hiddensection}}

    <div class="col-md-12 p-0 general-single-card p-15 p-3 mb-30 mb-4 m-b-2">
        <h2 class="single-section-title m-0 pt-0 {{#hidden}}text-muted{{/hidden}}">{{{ title }}}</h2>
        <p>{{{ summary }}}</p>
    </div>
    <div>
        <div class="cards p-0 m-0">
            <div id="section-{{section}}" class="section row wdm-card-single-section">
                {{#editing}}
                <div class="right side">
                    {{{ optionmenu }}}
                </div>
                {{/editing}}
                <div class="content w-full">
                    <ul class="row p-0 m-0 wdm-section-wrapper">
                    {{#activities}}
                        <li class="col-lg-4 col-md-6 col-sm-12 single-card-container px-15 modtype_{{{modulename}}}" id="module-{{id}}" data-id ="{{ id }}" data-section="{{ section }}">
                        <div class="single-card p-15 p-3 p-x-1 p-y-1 mb-20 mb-4 m-b-1">
                            {{#editing}}
                                <a class="wdm-drag-drop"><span><i class="fa fa-arrows" aria-hidden="true"></i></span></a>
                            {{/editing}}
                            <div class="wdm-activity-actions d-flex">
                                <span class="sno pr-15 pr-3 {{^hidden}}text-primary{{/hidden}} {{#hidden}}text-muted{{/hidden}} mr-15">{{ index }}.</span>
                                <div class="wdm-activity-actions d-flex">
                                    <div class="wdm-mod-name {{#hidden}}text-muted{{/hidden}}">{{ modulename }}</div>
                                    {{{ modicons }}}
                                </div>
                            </div>
                            <h4 class="wdm-single-activity-title">{{{ title }}}</h4>
                            <div class="text-center text-muted">
                                {{{ availstatus }}}
                            </div>
                            {{#summary}}
                                <div class="pt-10 mb-10">
                                    {{{ summary }}}
                                </div>
                            {{/summary}}
                            {{^availstatus}}
                            <div class="d-flex wdm-bottom-container card-bottom {{#hidden}}text-muted{{/hidden}}{{^hidden}}text-primary{{/hidden}}">
                                <div class="progress progress-xs m-0 bg-grey-300 mb-10 mb-2 m-b-1 w-p100">
                                    <div class="progress-bar bg-green-600" style="width: {{ percentage }}%;" role="progressbar">
                                    </div>
                                </div>
                                <div class="flex-1 pl-1 p-l-1">
                                    <a href="{{viewurl}}" class="btn {{^hidden}}btn-primary{{/hidden}} {{#hidden}}btn-dark{{/hidden}}">{{#str}}viewtopic, format_remuiformat{{/str}}</a>
                                </div>
                                {{#completion}}
                                <div class="wdm-completion-container align-items-center pr-1 p-r-1">
                                    <p class="m-0 m-a-0 mx-10 mx-2 m-x-1 text-right wdm-completion-title wdm-completion-status-{{id}}">
                                        {{#completed}}
                                            {{#str}} completed, format_remuiformat{{/str}}
                                        {{/completed}}
                                        {{^completed}}
                                            {{#str}} markcomplete, format_remuiformat{{/str}}
                                        {{/completed}}
                                    </p>
                                    <a class="btn bg-white p-0 p-a-0 wdm-toggle-completion" data-id="{{ id }}">
                                        <!--<span><i class="fa fa-check-circle" aria-hidden="true"></i></span>-->
                                        <div class="pchart wdm-chart-{{id}}" data-percent="{{#completed}}100{{/completed}}">
                                            <span class="activity-check-{{id}} activity-check {{#completed}}completed{{/completed}}"><i class="fa fa-check" aria-hidden="true"></i></span>
                                        </div>
                                    </a>
                                    <div class="hidden wdm-completion-check-{{id}}" >
                                        {{{ completion }}}
                                    </div>
                                </div>
                                {{/completion}}
                            </div>
                            {{/availstatus}}
                        </div>
                        </li>
                    {{/activities}}
                    </ul>
                </div>
                {{{ addnewactivity }}}
            </li>
        </ul>
    </div>

    <!-- next/prev sections -->
    <div class="col-md-12 p-0 wdm-card-section m-t-2">
        <div class="card-section-leftnav">
            {{{ leftnav }}}
        </div>
        <div class="card-section-rightnav">
            {{{ rightnav }}}
        </div>
    </div>
{{/hiddensection}}