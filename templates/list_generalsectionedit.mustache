
<li id="section-0" class="first-section-li section main clearfix mb-25" role="region" aria-label="{{{coursefullname}}}">
   <div class="p-10 course-cover-image pb-30" style="background-image: linear-gradient(to right, rgba(14, 35, 53, 0.68), rgba(14, 35, 53, 0.68)), url({{{remuicourseimage}}});" alt="" '="">
    {{{leftcontent}}}
    {{#rightside}}
    <div class="right side">
        {{{rightside}}}
    </div>
    {{/rightside}}
      <div class="text-white">
         <div class="page-title my-15">{{{coursefullname}}}</div>
         <div class="font-size-14 summary" style="max-width: 800px;">{{{ coursesummary }}}</div>
         
         <div class="mr-0 w-25 ml-auto">
         {{#teachers}}
            {{{teacherimg}}}
         {{/teachers}}
         </div>
      </div>
   </div>

   <span class="hidden sectionname">{{{title}}}</span>

   <div class="content">
   {{#percentage}}
      <div class="progress progress-square">
         <div class="progress-bar" style="width: {{{percentage}}}%;" role="progressbar">
            <span class="sr-only">80% Complete</span>
         </div>
      </div>
   {{/percentage}}
            <div class="section_availability badge badge-pill badge-info mb-10"></div>
               <ul class="section first-section img-text row p-0 pb-20 d-flex justify-content-center text-center showhideactivity">
         {{#activities}}
               <li class="activity first-section-activity {{{modulename}}} modtype_{{{modulename}}} col-6 col-sm-6 col-md-4 col-lg-2 justify-content-center p-0 pt-10" id="module-1">
                  <div>
                     <div>
                        <div class="activityinstance p-0 d-inline-block">
                           {{{title}}}
                        </div>
                        <div class="actions">
                           {{{completion}}}
                        </div>
                     </div>
                  </div>
               </li>
         {{/activities}}
               </ul>
            <div class="text-center showactivitywrapper">
            <button class="showactivity btn btn-primary px-25 show" style="visibility:     hidden;">Show More</button>
            </div>
            {{{addnewactivity}}}
   </div>
</li>


{{#js}}


    // show hide extra activities in general/first section
    jQuery('.showactivity').on('click', function() {
        jQuery('.section.first-section').toggleClass('showhideactivity');
        if(jQuery(this).hasClass('show')) {
            jQuery(this).text('{{# str }} showless, theme_remui {{/ str }}');
            jQuery(this).toggleClass('show');
        } else {
            jQuery(this).text('{{# str }} showmore, theme_remui {{/ str }}');
            jQuery(this).toggleClass('show');
        }
    });

    // show load more button conditionally
    jQuery(window).resize(function(){
        var wwidth = jQuery(window).width();
        var count = jQuery(".first-section-activity").length;

        if(wwidth > 991) {
            if(count > 6)
                jQuery('.showactivity').css('visibility', 'visible');
            else
                jQuery('.showactivity').css('visibility', 'hidden');
        } else if(wwidth > 767 && wwidth < 992) {
            if(count > 3)
                jQuery('.showactivity').css('visibility', 'visible');
            else
                jQuery('.showactivity').css('visibility', 'hidden');
        } else {
            if(count > 2)
                jQuery('.showactivity').css('visibility', 'visible');
            else
                jQuery('.showactivity').css('visibility', 'hidden');
        }
    });

    

{{/js}}
            
            